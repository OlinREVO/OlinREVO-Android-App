<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_overlay">

    <View
        android:id="@+id/spectator_center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <View
        android:id="@+id/spectator_spacer"
        android:layout_width="420dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Spectator Fragment"/>

    <com.revo.display.views.custom.RBatteryMeter
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/batterymeter"
        android:layout_toRightOf="@id/spectator_spacer"
        android:background="@drawable/empty_battery"
        custom:currentCharge="60"
        custom:maxCharge="100"/>

</RelativeLayout>